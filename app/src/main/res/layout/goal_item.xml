<!-- res/layout/goal_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="10dp"
    android:paddingEnd="19dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/circle_goat">

    <TextView
        android:id="@+id/goalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/goalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/currentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="85px"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_add_money_to_your_goal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Add money to goal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginEnd="7dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="85px"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="7dp"
            android:text="Delete Goal"
            android:background="@drawable/button_add_money_to_your_goal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:paddingBottom="13dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</LinearLayout>
