<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/selectedTime"
        android:layout_width="409dp"
        android:layout_height="58dp"
        android:layout_marginTop="224dp"
        android:text="08 : 45 PM"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="46dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="38dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/goToActivity_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GoToAct_2" />

        <Button
            android:id="@+id/goToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GoToMain" />

        <Button
            android:id="@+id/goToActivity_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GoToAct_3" />
    </LinearLayout>


    <Button
        android:id="@+id/notification_button"
        android:layout_width="257dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:layout_weight="1"
        android:onClick="push"
        android:text="Виклик сповіщення"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectTimeBtn"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:text="Select Time"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedTime" />

    <Button
        android:id="@+id/setAlarmBtn"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Set Alarm"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTimeBtn" />

    <Button
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Cancel Alarm"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAlarmBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>
