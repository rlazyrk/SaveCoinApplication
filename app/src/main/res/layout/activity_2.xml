<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="516dp"
        android:layout_height="823dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background3"
        tools:layout_editor_absoluteY="-12dp" />

    <Button
        android:id="@+id/notification_button"
        android:layout_width="149dp"
        android:layout_height="72dp"
        android:layout_marginTop="248dp"
        android:onClick="push"
        android:text="Виклик сповіщення"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/selectTimeBtn"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:text="Select Time"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/setAlarmBtn"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Set Alarm"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTimeBtn"/>
    <Button
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1" android:text="Cancel Alarm"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAlarmBtn"/>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="409dp"
        android:layout_height="38dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/goToActivity_2"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notifications" />

        <Button
            android:id="@+id/goToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MAin" />

        <Button
            android:id="@+id/goToActivity_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Categories" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="476dp"
        android:layout_height="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_button">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selectedTime"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>