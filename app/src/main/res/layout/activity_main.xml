<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addBudget"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/addBudget"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addExpenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterBudgetOrExpenses"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/enterBudgetOrExpenses"
        android:layout_width="400sp"
        android:layout_height="80dp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:hint="@string/hintEnterBudgetOrExpenses"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addExpenses"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:text="@string/addExpenses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addBudget"
        app:layout_constraintTop_toBottomOf="@+id/enterBudgetOrExpenses"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/curentbudget"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goToActivity_2"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:text="goToActivity_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goToMain"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:text="goToMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToActivity_2" />

    <Button
        android:id="@+id/goToActivity_3"
        android:layout_width="129dp"
        android:layout_height="44dp"
        android:text="goToActivity_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/goToMain" />
</androidx.constraintlayout.widget.ConstraintLayout>