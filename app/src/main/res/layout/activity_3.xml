<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_3">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="44dp"
        android:layout_height="220dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/enterType_1">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_marginEnd="94dp"
            app:srcCompat="@drawable/a34" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/popcorn_1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/a56" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/football_1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/a12" />

    </LinearLayout>


    <TextView
        android:id="@+id/viewSumOfAll"
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:layout_marginTop="88dp"
        android:text="Your total"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <EditText
        android:id="@+id/enterType_1"
        android:layout_width="192dp"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/addExpensesType"
        android:inputType="number"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="38dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/goToActivity_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notifications" />

        <Button
            android:id="@+id/goToMain"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Main" />

        <Button
            android:id="@+id/goToActivity_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Categories" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="228dp"
        android:layout_height="250dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterType_1">

        <Button
            android:id="@+id/addType_1"
            android:layout_width="146dp"
            android:layout_height="40dp"

            android:text="food" />

        <Button
            android:id="@+id/addType_2"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:text="Entertainment"
            tools:text="Entertainment" />

        <Button
            android:id="@+id/addType_3"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:text="clothes" />

        <Button
            android:id="@+id/addType_4"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:text="transport" />

        <Button
            android:id="@+id/addType_5"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:text="sport" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/enterType_1">

        <TextView
            android:id="@+id/viewType_1"
            android:layout_width="105dp"
            android:layout_height="32dp"
            android:text="Food"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/viewType_2"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:text="Entertaiment"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="221dp" />

        <TextView
            android:id="@+id/viewType_3"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:text="Clothes"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="135dp" />

        <TextView
            android:id="@+id/viewType_4"
            android:layout_width="97dp"
            android:layout_height="38dp"
            android:text="Transport" />

        <TextView
            android:id="@+id/viewType_5"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Sport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>